<h2></h2>
<div class="row">
    <div class="col-md-5">
        <h3>Matrix A</h3>
        <div id="jqGridLeft_container">
            <table id="jqGridLeft"></table>
        </div>
        <table class="tableMatrix">
            <tr>
                <td>
                    <button type="button" class="btn btn-default btn-block" id="setZeroLeft">
                        <strong>0</strong>
                    </button>
                </td>
                <td>
                    <button type="button" class="btn btn-default btn-block" id="setIdentityLeft">
                        <strong>E</strong>
                    </button>
                </td>
                <td>
                    <label class="col-xs-3 control-label hidden-xs">Rank</label>
                    <div class="col-md-9">
                        <select class="form-control rank">
                            <option>2</option>
                            <option selected>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <button type="button" class="btn btn-primary btn-block" id="reverseLeft"><strong>Reverse</strong></button>
                </td>

                <td></td>
            </tr>
            <tr>
                <td colspan="2">
                    <button type="button" class="btn btn-primary btn-block" id="transposeLeft"><strong>Transpose</strong></button>
                </td>

                <td></td>
            </tr>
            <tr>
                <td colspan="2">
                    <button type="button" class="btn btn-primary btn-block" id="multiplyByLeft"><strong>Multiply by</strong></button>
                </td>
                <td>
                    <div class="col-sm-6">
                        <input class="form-control" type="number">
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div class="col-md-2 operations">
        <h3>Operations</h3>

        <p>
            <button type="button" class="btn btn-primary btn-block" id="addMatrices"><strong>+</strong></button>
        </p>
        <p>
            <button type="button" class="btn btn-primary btn-block" id="subtractMatrices"><strong>-</strong></button>
        </p>
        <p>
            <button type="button" class="btn btn-primary btn-block" id="multiplyMatrices"><strong>*</strong></button>
        </p>
        <p>
            <button type="button" class="btn btn-primary btn-block" id="divideMatrices"><strong>/</strong></button>
        </p>
        <p>
            <button type="button" class="btn btn-default btn-block" id="leftMatrixToRight">
                <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
            </button>
        </p>
        <p>
            <button type="button" class="btn btn-default btn-block" id="rightMatrixToLeft">
                <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
            </button>
        </p>
        <p>
            <button type="button" class="btn btn-default btn-block" id="swapMatrices">
                <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
            </button>
        </p>
    </div>
    <div class="col-md-5">
        <h3>Matrix B</h3>
        <div id="jqGridRight_container">
            <table id="jqGridRight"></table>
        </div>
        <table class="tableMatrix">
            <tr>
                <td>
                    <button type="button" class="btn btn-default btn-block" id="setZeroRight">
                        <strong>0</strong>
                    </button>
                </td>
                <td>
                    <button type="button" class="btn btn-default btn-block" id="setIdentityRight">
                        <strong>E</strong>
                    </button>
                </td>
                <td>

                    <label class="col-xs-3 control-label hidden-xs">Rank</label>

                    <div class="col-md-9">
                        <select class="form-control rank">
                            <option>2</option>
                            <option selected>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <button type="button" class="btn btn-primary btn-block" id="reverseRight"><strong>Reverse</strong></button>
                </td>

                <td></td>
            </tr>
            <tr>
                <td colspan="2">
                    <button type="button" class="btn btn-primary btn-block" id="transposeRight"><strong>Transpose</strong></button>
                </td>

                <td></td>
            </tr>
            <tr>
                <td colspan="2">
                    <button type="button" class="btn btn-primary btn-block" id="multiplyByRight"><strong>Multiply by</strong></button>
                </td>
                <td>
                    <div class="col-sm-6">
                        <input class="form-control" type="number">
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <h3>Result Matrix</h3>
        <div id="jqGridResult_container">
            <table id="jqGridResult"></table>
        </div>
        <button type="button" class="btn btn-default pull-left" id="resultMatrixToLeft">
            <strong>A</strong>
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        </button>
        <button type="button" class="btn btn-default pull-right" id="resultMatrixToRight">
            <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
            <strong>B</strong>
        </button>
    </div>
    <div class="col-md-4">
    </div>
</div>
<div class="modal fade" id="confirm-clear" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @*<div class="modal-header">
                ...
            </div>*@
            <div class="modal-body">
                Do you want to clear source Matrix?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary btn-ok">Clear</a>
            </div>
        </div>
    </div>
</div>
@Html.Hidden("baseURL", "Home/")

@section Scripts {
    <script src="~/Scripts/matrix.js"></script>
}
